<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile Icon -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_person_card"
            android:background="@drawable/circle_person_background"
            android:padding="12dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Person Icon" />

        <!-- Information Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- ID and Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#001"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:background="@drawable/id_badge_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025-07-23"
                    android:textSize="11sp"
                    android:textColor="#888888"
                    android:gravity="end"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- Name -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DaniellBintang"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <!-- Address -->
            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jakarta, Indonesia"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@drawable/ic_location_small"
                android:drawablePadding="6dp"
                android:layout_marginBottom="8dp" />

            <!-- Actions Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonEdit"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="âœï¸ Edit"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/buttonDelete"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="ðŸ—‘ï¸ Delete"
                    android:textSize="12sp"
                    android:textColor="#D32F2F" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>